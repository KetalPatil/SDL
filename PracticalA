#program for if
a=10;
b=20;
if(a==b):
  print("a is  equal to b")
print("a is not equal to b")

#program for if-else
x=5
if(x>10):
  print("x is greater than 10")
else:
  print("x is not greater than 10")

#program for if-elif ladder
print("Select your fruit:")
print("1. Mango")
print("2. Apple")
print("3. Cherry")
choice = int( input() )
if( choice == 1 ):
  print( "You have selected Mango" )
elif( choice == 2 ):
    print( "You have selected Apple" )
elif( choice == 3 ):
    print( "You have selected Cherry" )
else:
    print("Wrong choice!")

temp=int(input())
oxylevel=int(input())
if(temp>37 and oxylevel<99):
  print("Patient is in critical condition")
elif(temp>37 and oxylevel>99):
  print("Patient is having fever")
elif(temp<237 and oxylevel<99):
  print("Patient is sick")
else:
  print("Patient is healthy")

#program for while
i = 1
while i < 6:
  print(i)
  i += 1

count = 0
while (count < 3):
    count = count + 1
    print("Hello")
